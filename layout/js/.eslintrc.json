{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "es6":   true
    },
    "plugins": [
        "react",
        "requirejs"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true,
            "modules": true,
            "module":  true
        }
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:requirejs/recommended"
    ],
    "root": true
}
